@{
    ViewData["Title"] = "Category - Add";
}
@model AddCategoryViewModel;
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Yeni Kategori Ekle
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Add" asp-controller="Category">

                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-tag"></i> Kategori Adı *
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Gıda, Ulaşım, Eğlence" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="fas fa-exchange-alt"></i> Kategori Tipi *
                            </label>
                            <select class="form-select" asp-for="TransactionType" required>
                                <option value="">Seçiniz...</option>
                                <option value="1">Gelir</option>
                                <option value="2">Gider</option>
                            </select>
                        </div>
